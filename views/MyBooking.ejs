  <% include ./partials/messages %>
<table class="table table-hover"  id="myTable">
    <thead>
      <tr class="table-dark">
        <td>Number</td>
        <td>Name</td>
        <td>Category</td>
        <td>Location</td>
        <td>Booking Date</td>
        <td>Returnning Date</td>
        <td>Action</td>

      </tr>
    </thead>
    <tbody>
      
        <% for(var i = 0; i < Item.length; i++) { %>  
        <tr>
            <td><%= i + 1 %></td>
            <td><%= Item[i].name %></td>
            <td><%= Item[i].category %></td>
            <td><%= Item[i].location %></td>
            <td><%= Item[i].bookdate %></td>
            <td><%= Item[i].returndate %></td>
            <td> 
              <a href="/UpdateBooking/<%= Item[i]._id%>" class="btn btn-outline-info">Edit</a>
              <a href="/CancelBooking/<%= Item[i]._id%>" class="btn btn-outline-danger">Cancel Booking</a>
              
          </td>
        </tr>
        <% } %>
   
    
  </tbody>
</table>

 <script>  $(document).ready( function () {
