<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/admin/adminItem"><i class="fas fa-angle-double-left"></i> All Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <p class="text-primary">Use the below form to Update an Item information</p>
        </div>

 <form action="/admin/UpdateItem/<%= Item._id %>" method="POST" id="UpdateItem">
    <div class="new_item">

        <div class="form-group">
            <label for="name" class="text-muted"><strong>Name</strong></label><br>
            <input type="text" name="name" value="<%= Item.name %>" placeholder="<%= Item.name %>">
        </div>

     
        <div class="form-group">
            <label for="category"><strong>Select Category</strong></label>
            <select class="form-control"
             id="category"
             name="category"
             value="">
    
            <option selected=""><%= Item.category %></option>
              <option>Electronic</option>
              <option>Household Appliance</option>
              <option>Garden</option>
              <option>Kitchen Appliance</option>
              <option>Tools</option>
              <option>Others</option>
            </select>
          </div>

          
        <div class="form-group">
            <label for="category"><strong>Avaliablity</strong></label>
            <select class="form-control"
             id="avaliablity"
             name="avaliablity"
             value="">
    
            <option selected=""><%= Item.avaliablity %></option>
              <option>true</option>
              <option>false</option>
            
            </select>
          </div>
          
        <div class="form-group">
            <label for="location" class="text-muted"><strong>location</strong></label><br>
            <input type="text" name="location" value="<%= Item.location %>" placeholder="<%= Item.location %>">
        </div>

        <div class="form-group">
            <label for="id" class="text-muted"><strong>ID</strong></label><br>
            <input type="number" name="id" value="<%= Item.id %>" placeholder="<%= Item.id %>">
        </div>

    
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
