<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/admin/adminUser"><i class="fas fa-angle-double-left"></i> All Users</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <p class="text-primary">Use the below form to Update the User information</p>
        </div>

 <form action="/UpdateUser/<%= User._id %>" method="POST" id="UpdateUser">
    <div class="new_user">

        <div class="form-group">
            <label for="name" class="text-muted"><strong>Name</strong></label><br>
            <input type="text" name="name" value="<%= User.name %>" placeholder="<%= User.name %>">
        </div>

        <div class="form-group">
            <label for="email" class="text-muted"><strong>email</strong></label><br>
            <input type="text" name="email" value="<%= User.email %>" placeholder="<%= User.email %>">
        </div>
       
        <div class="form-group">
            <label for="division" class="text-muted"><strong>division</strong></label><br>
            <input type="text" name="division" value="<%= User.division %>" placeholder="<%= User.division %>">
        </div>

        <fieldset class="form-group">
            <legend class="mt-4">Delivery</legend>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="access" id="true" value="true" checked="">
                Yes
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="access" id="false" value="false">
                No
              </label>
            </div>
        <div class="form-check disabled">
        </div>
    </fieldset>


        <div class="form-group">
            <label for="division" class="text-muted"><strong>TagID</strong></label><br>
            <input type="text" name="TagID" value="<%= User.TagID %>" placeholder="<%= User.TagID %>">
        </div>
       
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
