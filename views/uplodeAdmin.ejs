
    <fieldset>
        <legend>Uplode Item</legend>
        <%= include ("./partials/messages"); %>
        <form action="/admin/uplodeAdmin" method="POST">
        <div class="form-group">
          <label class="name" for="inputDefault">Item Name</label>
          <input type="text"
           class="form-control"
           placeholder="Example: Drill"
           name="name" id="name"
           value="<%= typeof name != 'undefined' ? name : '' %>">
        </div>
  
        <div class="form-group">
          <label for="category">Select Category</label>
          <select class="form-control"
           id="category"
           name="category"
           value="<%= typeof category != 'undefined' ? category : '' %>">
  
          <option selected="">Select Category</option>
            <option>Electronic</option>
            <option>Household Appliance</option>
            <option>Garden</option>
            <option>Kitchen Appliance</option>
            <option>Tools</option>
            <option>Others</option>
          </select>
        </div>
  
        <div class="form-group">
          <label class="location" for="inputDefault">Location</label>
          <input type="text" class="form-control" placeholder="Example: Warehouse-1" id="location" name="location" value="<%= typeof location != 'undefined' ? location : '' %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
       
        
        <a href="/admin/adminItem"  class="btn btn-danger">Cancel</a>
      </fieldset>
    
  